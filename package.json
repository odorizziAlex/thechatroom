{
  "name": "thechatroom",
  "version": "1.0.0",
  "description": "Chat App built with the MERN Stack and SocketIO",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/odorizziAlex/thechatroom.git"
  },
  "author": "Alex Odorizzi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/odorizziAlex/thechatroom/issues"
  },
  "homepage": "https://github.com/odorizziAlex/thechatroom#readme",
  "dependencies": {
    "concurrently": "^6.2.2",
    "express": "^4.17.1",
    "mongoose": "^6.0.8",
    "socket.io": "^4.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.13"
  }
}
